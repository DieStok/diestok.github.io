source "https://rubygems.org"

# GitHub Pages gem - includes Jekyll and all GitHub Pages compatible plugins
gem "github-pages", group: :jekyll_plugins

# Windows-specific gem
gem "wdm", "~> 0.1.0" if Gem.win_platform?

# Development-only dependencies (not needed for GitHub Pages build)
group :development do
  gem 'hawkins'  # Live-reload development server
end
